<% layout("/layouts/boilerplate") %>
  <script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = JSON.parse('<%- JSON.stringify(idListing) %>');
  </script>

  <body>
    <script>
      window.onload = function () {
        window.scrollTo(0, 0);
      };
    </script>
    <div class="row">
      <div class="col-10 col-lg-8 col-md-10  offset-1 offset-lg-2 offset-md-1 ">
        <br />
        <h3>
          <%= idListing.title %>
        </h3>
        <br />
      </div>
      <div class="col-10 col-lg-8 col-md-10  offset-1 offset-lg-2 offset-md-1 ">
        <div class="card listing-card ">
          <div id="carouselIndicators" class="carousel slide">
            <div class="carousel-indicators">
              <% idListing.image.forEach((image, index)=> { %>
                <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="<%= index %>"
                  class="<%= index === 0 ? 'active' : '' %>" aria-current="<%= index === 0 ? 'true' : 'false' %>"
                  aria-label="Slide <%= index + 1 %>">
                </button>
                <% }); %>
            </div>
            <div class="carousel-inner">
              <% idListing.image.forEach((image, index)=> { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img src="<%= image.url %>" class="d-block w-100 show-img" alt="listing-image">
                </div>
                <% }); %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicators"
              data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicators"
              data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          <div class="card-body">
            <p class="card-text mt-1">
              Owned by <i><b>
                  <%= idListing.owner ? idListing.owner.username : 'Unknown User' %>
                </b></i>
            </p>
            <br />
            <p class="card-text">
              <%= idListing.description %>
            </p>
            <p class="card-text">&#8360; <%= idListing.price.toLocaleString('en-PK') %>
            </p>
            <p class="card-text">
              <%= idListing.location %>
            </p>
            <p class="card-text">
              <%= idListing.country %>
            </p>
          </div>
        </div>
      </div>
      <% if(currUser && currUser._id.equals(idListing.owner._id)) { %>
        <div class="col-10 col-lg-8 col-md-10  offset-1 offset-lg-2 offset-md-1">
          <div class="row">
            <div class="col-3">
              <a href="/listings/<%= idListing._id %>/edit" class="btn custom-btn">Edit</a>
            </div>
            <div class="col-2">
              <form method="post" action="/listings/<%= idListing._id %>?_method=DELETE">
                <button class="btn custom-btn">Delete</button>
              </form>
            </div>
          </div>
          <br>
          <hr>
        </div>
        <% }%>
          <% if(currUser) { %>
            <div class="col-10 col-lg-8 col-md-10  offset-1 offset-lg-2 offset-md-1">

              <h3>Leave a Review</h3>
              <form method="POST" action="/listings/<%= idListing._id %>/reviews" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                  <fieldset class="starability-growRotate">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                      aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>



                <div class="mb-3 mt-3">
                  <label for="comment" class="form-label">Comment</label>
                  <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                    required></textarea>
                  <div class="invalid-feedback">Please add some comment for review!</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
              </form>
              <br>


            </div>
            <% } %>
              <div class="col-10 col-lg-8 col-md-10  offset-1 offset-lg-2 offset-md-1">
                <hr><br>
                <h4>All Reviews</h4>
                <br>

                <div class="row">
                  <% for(review of idListing.reviews) {%>
                    <div class="col-md-6 mb-3">
                      <div class="card p-2">
                        <div class="card-body">
                          <h5 class="card-title">
                            <%= review.author.username %>
                          </h5>
                          <p class="card-text starability-result" data-rating="<%= review.rating %>">
                          </p>
                          <p class="card-text">
                            <%= review.comment %>
                          </p>

                          <form method="POST"
                            action="/listings/<%= idListing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <% if(currUser && (currUser._id.equals(idListing.owner._id) ||
                              currUser._id.equals(review.author._id))) { %>
                              <button class="btn btn-sm btn-dark">Delete</button>
                              <% } %>
                          </form>

                        </div>
                      </div>
                    </div>
                    <% } %>
                </div>
              </div>
              <div class="col-10 col-lg-8 col-md-10  offset-1 offset-lg-2 offset-md-1 ">
                <h4>Where you'll be</h4>
                <div id="map"></div>
              </div>
    </div>
    </div>
    <br />
    <script src="/js/map.js">  </script>
  </body>