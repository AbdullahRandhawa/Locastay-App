<% layout('/layouts/boilerplate') %>

    <body>
        <div class="container my-5">
            <div class="row align-items-center mb-4">
                <div class="col-md-3 col-sm-12 text-center mb-4">
                    <img class="rounded-circle profile-img" src="<%= profile.profileImg.url %>" alt="Profile Image" />
                </div>

                <div class="col-md-9 col-sm-12">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
                        <h2 class="fw-bold mb-0">
                            <%= profile.fullName %>
                        </h2>
                        <div class="d-flex gap-2 mt-3 mt-md-0">
                            <a href="/profile/edit" class="btn btn-outline-danger">
                                Edit Profile
                            </a>
                            <a href="/listings/new" class="btn btn-danger">
                                Add New Listing
                            </a>
                        </div>
                    </div>
                    <div class="profile-details-grid">
                        <p class="fs-5"><b>Username:</b>
                            <%= profile.username %>
                        </p>
                        <p class="fs-5"><b>Country:</b>
                            <%= profile.country %>
                        </p>
                        <p class="fs-5"><b>Email:</b>
                            <%= profile.email %>
                        </p>
                        <p class="fs-5"><b>Contact:</b>
                            <%= profile.phoneNumber %>
                        </p>

                    </div>
                    <div class="mt-3">
                        <p><b>Bio:</b></p>
                        <p>
                            <%= profile.bio %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-5">

        <div class="container my-5">
            <div class="text-center mb-4">
                <h2 class="fw-bold">Your Listings</h2>
            </div>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% for(let listing of allListings){ %>
                    <div class="col">
                        <a href="/listings/<%= listing._id %>" class="listing-link">
                            <div class="card listing-card h-100">
                                <img src="<%= listing.image[0].url %>" class="card-img-top listing-img"
                                    alt="<%= listing.title %>">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= listing.title %>
                                    </h5>
                                    <p class="card-text">
                                        &#8360; <%= listing.price.toLocaleString('en-PK') %>/ night
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <%} %>
            </div>
        </div>
    </body>