<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-6 col-lg-6 col-md-8 col-sm-10 offset-3 offset-lg-3 offset-md-2  offset-sm-1">
                <h4 class="">Signup on LocaStay</h4>
                <form method="Post" action="/signup" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" name="username" id="username" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" required>

                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Passward</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                    </div>

                    <button class="btn btn-danger">SignUp</button>
                </form>
            </div>
        </div>
    </body>